{
    "name": "microstudi/silex-grunt-skeleton",
    "description": "A pre-configured skeleton for the Silex microframework with Grunt tasks added",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.4.0",
        "silex/silex": "~1.3",
        "silex/web-profiler": "^1.0",
        "symfony/class-loader": "^2.8",
        "symfony/config": "^2.8",
        "symfony/console": "~2.8",
        "symfony/debug": "~2.8",
        "symfony/finder": "~2.8",
        "symfony/form": "~2.8",
        "symfony/monolog-bridge": "~2.8",
        "symfony/process": "~2.8",
        "symfony/security": "~2.8",
        "symfony/translation": "~2.8",
        "symfony/twig-bridge": "~2.8",
        "symfony/validator": "~2.8",
        "symfony/http-kernel": "^2.8",
        "twig/extensions": "^1.3"
    },
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "symfony/browser-kit": "~2.8",
        "symfony/css-selector": "*"
    },
    "authors": [
        {
            "name": "Ivan Verg√©s",
            "role": "Developer"
        }
    ],
    "scripts": {
        "post-create-project-cmd": [
            "npm install",
            "bower install"
        ],
        "post-create-project-cmd": [
            "npm install",
            "bower update"
        ]
    }
}
